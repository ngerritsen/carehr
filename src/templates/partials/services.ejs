<section class="section section--odd">
  <div class="container">
    <h2>Diensten</h2>
    <p class="sub-title"><%= tagLine %></p>

    <div class="services">
      <% services.forEach((service, index) => { %>
        <div class="service">
          <div class="service__icon">
            <i class="far fa-<%= service.icon %>"></i>
          </div>
          <div class="service__content">
            <h3 class="service__title"><%= service.title %></h3>
            <p class="service__intro"><%= service.intro %></p>
          </div>
          <a class="icon-with-text" href="diensten.html#<%= service.id %>">
            <i class="fas fa-angle-right"></i>Lees meer
          </a>
        </div>
      <% }) %>
    </div>

    <center>
      <a href="diensten.html" class="button">Meer over onze diensten</a>
    </center>

    <div class="companies">
      <% companies.forEach((company) => { %>
        <a href="<%= company.url %>" class="company" target="_blank">
          <img class="company__image" src="img/<%= company.image %>.png" alt="<%= company.name %>">
        </a>
      <% }) %>
    </div>
  </div>
</section>
